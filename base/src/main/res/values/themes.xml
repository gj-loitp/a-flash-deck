<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aflashdeck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_custom</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="pageBackground">@color/white</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="Theme.Aflashdeck.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Aflashdeck.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Aflashdeck.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Aflashdeck.BorderlessMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">70dp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/daynight_gray_700_white</item>
        <item name="android:textSize">@dimen/text_nav_menu</item>
        <item name="android:textStyle">normal</item>
        <item name="iconPadding">24dp</item>
        <item name="iconTint">@color/daynight_gray_700_white</item>
    </style>

    <style name="Theme.Aflashdeck.HomeMenuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/daynight_gray_700_white</item>
        <item name="android:textSize">@dimen/text_nav_menu</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">16dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="background">@drawable/home_menu_button</item>
        <item name="iconSize">48dp</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="iconGravity">top</item>
    </style>

    <style name="Theme.Aflashdeck.MenuTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/daynight_gray_700_white</item>
        <item name="android:textSize">@dimen/text_nav_menu</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>